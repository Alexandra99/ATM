<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
	android:id="@+id/widget40"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/farm"
>
<Spinner
	android:id="@+id/categories_spinner"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_x="0dp"
	android:layout_y="150dp"
        android:gravity="center" 
        />
<Spinner
	android:id="@+id/location_spinner"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_x="0dp"
	android:layout_y="200dp" 
        android:gravity="center" 
        />
<ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        android:layout_x="0dp"
	android:layout_y="0dp" />
<Button
	android:id="@+id/search_button"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Αναζήτηση"
        android:layout_x="112dp"
	android:layout_y="344dp" 
/>
<EditText
	android:id="@+id/productNameField"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
        android:hint="Προιόν: π.χ ΦΡΑΟΥΛΕΣ"
	android:textSize="18sp"
	android:layout_x="0dp"
	android:layout_y="250dp" />
<Button
	android:id="@+id/login_button"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Σύνδεση/Εγγραφή"
        android:layout_x="90dp"
	android:layout_y="400dp"  />
<TextView
	android:id="@+id/widget50"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Αναζήτηση Προιόντων"
        android:textStyle="bold|italic"
	android:textSize="20sp"
        android:textColor="#000000"
	android:layout_x="50dp"
	android:layout_y="110dp" />
</AbsoluteLayout>